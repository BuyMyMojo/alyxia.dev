<!-- prettier-ignore -->
{[progn
  (define pos '("bottom" "center" "left" "right" "top"))
  (define wpos (nth (random (length pos)) pos))
]}~

<div class="introduction">
  {.SYNTAX "[" "]"}
  <div id="wallpaper" style="background-position: [wpos]">
    [.SYNTAX "{" "}"]
    <h1 id="welcome">Welcome.</h1>
  </div>
  {(separator)}
</div>

